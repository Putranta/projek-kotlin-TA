<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/cactus_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="16dp"
        app:cardUseCompatPadding="true"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100">

            <ImageView
                android:id="@+id/imgItem"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:layout_weight="60"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/imgItem"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_weight="40">

                <TextView
                    android:id="@+id/namaItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri"
                    android:text="Cactus"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/itemDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri"
                    android:layout_marginTop="5dp"
                    android:text="Lorem Ipsum gfdg fd fdg dfgfgd dfgdfg dgfdg dfgfd dgfgdf fdg ddgfgfgrett ert tert tert reter eterter ert."
                    android:textColor="#222222"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:gravity="bottom">


                    <TextView
                        android:id="@+id/tvUsername"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:fontFamily="@font/calibri"
                        android:text="Putranta"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tvUploadedAt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:fontFamily="@font/calibri"
                        android:text="20 Des 2024"
                        android:textColor="#131313"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                    <ImageView
                        android:layout_weight="20"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_chat_24"/>



                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>